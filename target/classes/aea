server.port= 8083
spring.application.name= publication-service

spring.datasource.url=${POSTGRESQL_JDBC_URL}
spring.datasource.username=${POSTGRESQL_JDBC_USER}
spring.datasource.password=${POSTGRESQL_JDBC_PASSWORD}
spring.datasource.driver-class-name=org.postgresql.Driver

spring.jpa.database= postgresql
spring.jpa.hibernate.ddl-auto= update
spring.jpa.generate-ddl= true
spring.jpa.show-sql= true
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation= true

spring.config.import= optional:configserver:http://localhost:9196